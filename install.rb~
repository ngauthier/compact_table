# Install hook code here

require 'ftools'

plugins_dir = File.expand_path(".")
compact_table_dir = File.join(plugins_dir, 'compact_table')
root_dir = File.join(redbox_dir, '..', '..', '..')

File.copy File.join(compact_table_dir, 'javascripts', 'compact_table.js'), File.join(root_dir, 'public', 'javascripts', 'compact_table.js')
File.copy File.join(compact_table_dir, 'stylesheets', 'compact_table.css'), File.join(root_dir, 'public', 'stylesheets', 'compact_table.css')
